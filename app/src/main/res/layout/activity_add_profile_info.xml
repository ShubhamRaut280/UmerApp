<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.AddProfileInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:id="@+id/profiledp"
            android:src="@drawable/user"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/popins"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/nameText"
            android:layout_below="@id/profiledp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/nameText"
            android:id="@+id/username"
            android:background="@drawable/round_theme_for_edittext"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:hint="Enter your name"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contacttext"
            android:text="Phone Number"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/username"
            android:textColor="@color/main"
            android:fontFamily="@font/popins"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/phonenumber"
            android:layout_below="@id/contacttext"
            android:background="@drawable/round_theme_for_edittext"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Details"
            android:id="@+id/update"
            android:layout_below="@id/phonenumber"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/round_corners_for_buttons"
            android:fontFamily="@font/popins"
            android:textStyle="bold"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>